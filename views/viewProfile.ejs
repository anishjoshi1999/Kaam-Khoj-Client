<div style="margin-top: 80px;">
  <div class="vh-100">
    <h2 class="text-center">Total Records: <%= jobsData.length %></h2>
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">S.N</th>
          <th scope="col">Job Name</th>
          <th scope="col">Salary</th>
          <th scope="col">Job Description</th>
          <th scope="col">Job Seeker / Provider</th>
          <th scope="col">Contact Number</th>
          <th scope="col">Location</th>
          <th scope="col">Availability</th>
          <th scope="col">Created Time</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(jobsData) && jobsData.length > 0) { %>
        <% jobsData.forEach((job, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= job.name %></td>
          <td><%= job.salary %></td>
          <td><%= job.description %></td>
          <td><%= job.role %></td>
          <td><%= job.contactNumber %></td>
          <td><%= job.location %></td>
          <td style="background-color: <%= job.availability ? 'green' : 'red' %>;"><%= job.availability.toString().toUpperCase() %></td>
          <td><%= job.createdTime.toLocaleString() %></td>
          <td>
            <form action="/api/view/<%=job._id%>" method="GET">
              <!-- Hidden input fields with the job data -->
              <input type="hidden" name="name" value="<%= job.name %>">
              <input type="hidden" name="salary" value="<%= job.salary %>">
              <input type="hidden" name="description" value="<%= job.description %>">
              <input type="hidden" name="role" value="<%= job.role %>">
              <input type="hidden" name="contactNumber" value="<%= job.contactNumber %>">
              <input type="hidden" name="location" value="<%= job.location %>">
              <input type="hidden" name="availability" value="<%= job.availability %>">
              <input type="hidden" name="createdTime" value="<%= job.createdTime %>">
              <button type="submit" class="btn btn-sm btn-primary">Edit</button>
            </form>
            <form action="/api/delete/<%= job._id %>" method="POST">
              <!-- Add this hidden input field for method override -->
              <input type="hidden" name="_method" value="DELETE">
              <!-- Other form fields go here -->
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
            
          </td>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="9" class="text-center">No data available</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
