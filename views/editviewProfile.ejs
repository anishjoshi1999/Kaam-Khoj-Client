<%- include('./partials/header.ejs') %>

<div style="margin-top: 80px;">
  <div class="container">
    <h3 class="display-6 text-center">
      Edit Information of Job Seeker's or Provider's
    </h3>
    <form action="/api/edit/<%=_id%>" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required value="<%=name%>"/>
      </div>

      <div class="mb-3">
        <label class="form-label">Role</label>
        <div class="form-check">
          <input type="radio" id="jobProvider" name="role" class="form-check-input" value="jobProvider" required <% if (role === 'jobProvider') { %>checked<% } %> />
          <label for="jobProvider" class="form-check-label">Job Provider</label>
        </div>

        <div class="form-check">
          <input type="radio" id="jobSeeker" name="role" class="form-check-input" value="jobSeeker" required <% if (role === 'jobSeeker') { %>checked<% } %> />
          <label for="jobSeeker" class="form-check-label">Job Seeker</label>
        </div>
      </div>
      <div class="mb-3">
        <label for="specificJob" class="form-label">Specific Job</label>
        <select class="form-select form-control"  id="specificJob" name="specificJob" required>
          <option value="" disabled>Select Specific Job</option>
          <option value="cook" <% if (specificJob === 'cook') { %>selected<% } %>>Cook</option>
          <option value="helper" <% if (specificJob === 'helperMaid') { %>selected<% } %>>Helper/Maid</option>
          <option value="driver" <% if (specificJob === 'driver') { %>selected<% } %>>Driver</option>
          <option value="sales" <% if (specificJob === 'sales') { %>selected<% } %>>Sales</option>
          <option value="other" <% if (specificJob === 'other') { %>selected<% } %>>Other</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Availability</label>
        <div class="form-check">
          <input type="radio" id="availabilityYes" name="availability" class="form-check-input" value="true" required <% if (availability === true) { %>checked<% } %> />
          <label for="availabilityYes" class="form-check-label">Yes</label>
        </div>

        <div class="form-check">
          <input type="radio" id="availabilityNo" name="availability" class="form-check-input" value="false" required <% if (availability === false) { %>checked<% } %> />
          <label for="availabilityNo" class="form-check-label">No</label>
        </div>
      </div>

      <div class="mb-3">
        <label for="contactNumber" class="form-label">Contact Number</label>
        <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required value="<%= contactNumber %>"/>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location" required value="<%= location %>"/>
      </div>

      <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="text" class="form-control" id="salary" name="salary" required value="<%= salary %>"/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" required><%= description %></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
